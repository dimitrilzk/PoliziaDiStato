
@{
    ViewBag.Title = "Home";
}
<div class="d-flex justify-content-center">
    <h2>Bentornato Agente</h2>
</div>
<div class="d-flex justify-content-center">
    <h5>Naviga il menu e scegli cosa vuoi fare oggi</h5>
</div>

<div class="container my-5">
    <div class="row">
        <div class="col-6 my-2">
            <p class="d-flex justify-content-center">
                <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                    Verbali trascritti raggruppati per trasgressore
                </button>
            </p>
            <div class="collapse" id="collapseExample">
                <div class="card card-body">
                    @{
                        Html.RenderAction("PartialViewVerbali");
                    }
                </div>
            </div>
        </div>
        <div class="col-6 my-2">
            <p class="d-flex justify-content-center">
                <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample2" aria-expanded="false" aria-controls="collapseExample">
                    Punti decurtati raggruppati per trasgressore
                </button>
            </p>
            <div class="collapse" id="collapseExample2">
                <div class="card card-body">
                    @{
                        Html.RenderAction("PartialViewPunti");
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-6 my-2">
            <p class="d-flex justify-content-center">
                <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample3" aria-expanded="false" aria-controls="collapseExample">
                    Violazioni che superano i 10 punti
                </button>
            </p>
            <div class="collapse" id="collapseExample3">
                <div class="card card-body">
                    @{
                        Html.RenderAction("PartialView10Punti");
                    }
                </div>
            </div>
        </div>
        <div class="col-6 my-2">
            <p class="d-flex justify-content-center">
                <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample4" aria-expanded="false" aria-controls="collapseExample">
                    Violazioni il cui importo è maggiore di 400 euro
                </button>
            </p>
            <div class="collapse" id="collapseExample4">
                <div class="card card-body">
                    @{
                        Html.RenderAction("PartialView400Euro");
                    }
                </div>
            </div>
        </div>
    </div>
</div>


